<h1>Admin Dashboard</h1>

<div class="container mt-3">
  <div class="row">
    <div class="col">
      <div class="card text-white bg-primary mb-3">
        <div class="card-header">Products</div>
        <div class="card-body">
          <h5 class="card-title"><%= @products_count %> Products</h5>
          <%= link_to 'View Products', [:admin, :products], class: 'btn btn-light' %>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card text-white bg-success mb-3">
        <div class="card-header">Categories</div>
        <div class="card-body">
          <h5 class="card-title"><%= @categories_count %> Categories</h5>
          <%= link_to 'View Categories', [:admin, :categories], class: 'btn btn-light' %>
        </div>
      </div>
    </div>
  </div>
</div>
